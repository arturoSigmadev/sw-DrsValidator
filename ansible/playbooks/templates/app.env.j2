# DRS Validation Framework Environment Configuration
PYTHONPATH=/app
ENVIRONMENT={{ app_environment }}
LOG_LEVEL=INFO
DRS_PORT={{ app_port }}
DRS_HOST=0.0.0.0

# Database settings
DATABASE_URL=sqlite:///data/drs.db

# Security settings
SECRET_KEY={{ ansible_date_time.epoch }}{{ ansible_hostname }}

# Device configuration
DMU_HOST={{ device_config.dmu.host }}
DMU_PORT={{ device_config.dmu.port }}
DRU_HOST={{ device_config.dru.host }}
DRU_PORT={{ device_config.dru.port }}

# Validation settings
VALIDATION_TIMEOUT=30
MAX_RETRIES=3
MOCK_MODE=false

# Hardware information
HARDWARE_TYPE={{ hardware_type | default('generic') }}
MEMORY_MB={{ ansible_memtotal_mb }}
CPU_CORES={{ ansible_processor_vcpus }}